@page
@model Projet.Pages.Tenders.CreateModel

<h2>Créer un appel d’offre</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Tender.Title"></label>
        <input asp-for="Tender.Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Tender.StartDate"></label>
        <input asp-for="Tender.StartDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Tender.EndDate"></label>
        <input asp-for="Tender.EndDate" type="date" class="form-control" />
    </div>

    <button class="btn btn-success">Créer</button>
</form>
