@page "{id:int}"
@model Projet.Pages.Tenders.DetailsModel

<h2 class="mb-3">@Model.Tender.Title</h2>

<p>
    📅 <strong>Période :</strong>
    @Model.Tender.StartDate?.ToShortDateString()
    →
    @Model.Tender.EndDate?.ToShortDateString()
</p>

<p>
    📌 <strong>Statut :</strong>
    <span class="badge bg-secondary">@Model.Tender.Status</span>
</p>

<hr />

<h4 class="mt-4">📄 Offres reçues</h4>

@if (!Model.Offers.Any())
{
    <p class="text-muted">Aucune offre soumise.</p>
}
else
{
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>Fournisseur</th>
                <th>Prix</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.Offers)
            {
                <tr>
                    <td>@o.SupplierId</td>
                    <td>@o.TotalPrice</td>
                    <td>@o.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post" class="mt-3">
        <button class="btn btn-danger">
            🏆 Sélectionner le moins disant
        </button>
    </form>
}

<a asp-page="Index" class="btn btn-secondary mt-4">
    ⬅ Retour
</a>
