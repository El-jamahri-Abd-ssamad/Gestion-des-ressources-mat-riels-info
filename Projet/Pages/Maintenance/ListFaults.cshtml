@page
@model Projet.Pages.Maintenance.ListFaultsModel

<h2>Liste des pannes</h2>

<table>
    <thead>
        <tr><th>Id</th><th>Ressource</th><th>Déclarée le</th><th>Statut</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var f in Model.Faults)
        {
            <tr>
                <td>@f.Id</td>
                <td>@f.IdResource</td>
                <td>@f.DateDeclared</td>
                <td>@f.Status</td>
                <td>
                    <a asp-page="./TakeCharge" asp-route-id="@f.Id">Prendre en charge</a>
                </td>
            </tr>
        }
    </tbody>
</table>