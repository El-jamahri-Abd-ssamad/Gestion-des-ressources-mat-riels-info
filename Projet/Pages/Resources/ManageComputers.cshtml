@page
@model Projet.Pages.Resources.ManageComputersModel
@{
    ViewData["Title"] = "Gestion des Ordinateurs";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">
            <i class="fas fa-desktop me-2"></i>Gestion des Ordinateurs
        </h2>
        <p class="text-muted mb-0">
            @Model.Computers.Count ordinateur(s) enregistré(s)
        </p>
    </div>
    <a asp-page="./AddComputer" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Ajouter un Ordinateur
    </a>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Liste des Ordinateurs</h5>
        <input type="text"
               class="form-control form-control-sm"
               placeholder="Rechercher..."
               style="width: 250px;">
    </div>

    <div class="card-body p-0">
        @if (Model.Computers.Count == 0)
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Aucun ordinateur enregistré</p>
                <a asp-page="./AddComputer" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-2"></i>Ajouter le premier
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>N° Inventaire</th>
                            <th>Marque</th>
                            <th>CPU</th>
                            <th>RAM</th>
                            <th>Disque</th>
                            <th>Écran</th>
                            <th>Affectation</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var computer in Model.Computers)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">
                                        @computer.InventoryNumber
                                    </strong>
                                </td>
                                <td>@computer.Brand</td>
                                <td>@computer.CPU</td>
                                <td>
                                    <span class="badge bg-info">
                                        @computer.RAM
                                    </span>
                                </td>
                                <td>@computer.HardDrive</td>
                                <td>@computer.Screen</td>
                                <td>
                                    <small class="text-muted">
                                        @computer.AssignmentType
                                    </small><br />
                                    <strong>@computer.AssignedTo</strong>
                                </td>
                                <td class="text-center">
                                    <!-- ACTIONS -->
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-page="./EditComputers"
                                           asp-route-inventoryNumber="@computer.InventoryNumber"
                                           class="btn btn-sm btn-warning"
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-inventoryNumber="@computer.InventoryNumber">
                                            <button type="submit"
                                                    class="btn btn-sm btn-danger"
                                                    title="Supprimer"
                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet ordinateur ?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
