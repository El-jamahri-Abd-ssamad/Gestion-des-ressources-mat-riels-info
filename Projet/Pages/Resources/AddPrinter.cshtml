@page
@model Projet.Pages.Resources.AddPrinterModel
@{
    ViewData["Title"] = "Ajouter une Imprimante";
}

<style>
    /* Cards */
    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.05);
    }

    .card-header {
        font-weight: 600;
        font-size: 1rem;
        background-color: #f8f9fa;
    }

        .card-header i {
            color: #0d6efd;
        }

    /* Form labels and icons */
    .form-label i {
        color: #0d6efd;
    }

    .input-group-text {
        background-color: #e9ecef;
        color: #0d6efd;
        border-radius: 0.375rem 0 0 0.375rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.25);
    }

    /* Buttons */
    .btn i {
        vertical-align: middle;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    /* Section titles */
    h6.text-primary {
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.25rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    /* Breadcrumb */
    .breadcrumb-item a {
        text-decoration: none;
        color: #0d6efd;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .row > .col-lg-4, .row > .col-lg-8 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .d-flex.justify-content-end.gap-2 {
            flex-direction: column;
        }
    }
</style>

<div class="page-header mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="./ManagePrinters">Imprimantes</a></li>
            <li class="breadcrumb-item active">Ajouter</li>
        </ol>
    </nav>
    <h2 class="mt-2"><i class="fas fa-plus-circle me-2"></i>Ajouter une Imprimante</h2>
</div>

<div class="row g-4">
    <!-- Formulaire principal -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-print me-2"></i>Informations de l'Imprimante</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Informations générales -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-info-circle me-2"></i>Informations Générales</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Numéro d'inventaire *</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    <input asp-for="Printer.InventoryNumber" class="form-control" placeholder="INV-2026-001" />
                                </div>
                                <span asp-validation-for="Printer.InventoryNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Marque *</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                    <input asp-for="Printer.Brand" class="form-control" placeholder="HP, Canon..." />
                                </div>
                                <span asp-validation-for="Printer.Brand" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Spécifications techniques -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-tachometer-alt me-2"></i>Spécifications Techniques</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Vitesse d'impression (ppm)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tachometer-alt"></i></span>
                                    <input asp-for="Printer.PrintSpeed" type="number" class="form-control" placeholder="20" />
                                </div>
                                <span asp-validation-for="Printer.PrintSpeed" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Résolution</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-expand"></i></span>
                                    <input asp-for="Printer.Resolution" class="form-control" placeholder="1200x1200 dpi" />
                                </div>
                                <span asp-validation-for="Printer.Resolution" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Date de livraison</label>
                                <input asp-for="Printer.DeliveryDate" type="date" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Affectation -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-users me-2"></i>Affectation</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Affecté à</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Printer.AssignedTo" class="form-control" placeholder="Nom" />
                                </div>
                                <span asp-validation-for="Printer.AssignedTo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Type d'affectation</label>
                                <select asp-for="Printer.AssignmentType" class="form-select">
                                    <option value="Department">Département</option>
                                    <option value="Teacher">Enseignant</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">ID Département</label>
                                <input asp-for="Printer.DepartmentId" type="number" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Fournisseur -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-truck me-2"></i>Fournisseur</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">ID Fournisseur</label>
                                <input asp-for="Printer.SupplierId" type="number" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Boutons -->
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-page="./ManagePrinters" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Ajouter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar d'aide -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Aide</h6>
            </div>
            <div class="card-body">
                <p class="small mb-2"><strong>Numéro :</strong> Identifiant unique</p>
                <p class="small mb-2"><strong>Vitesse :</strong> Vitesse d'impression en pages par minute</p>
                <p class="small mb-2"><strong>Résolution :</strong> Qualité d'impression en dpi</p>
                <p class="small mb-0"><strong>Type :</strong> Département ou Enseignant</p>
            </div>
        </div>
    </div>
</div>
