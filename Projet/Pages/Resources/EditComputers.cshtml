@page
@model Projet.Pages.Resources.EditComputerModel
@{
    ViewData["Title"] = "Modifier l'Ordinateur";
}

<style>
    /* Cards et headers */
    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.05);
    }

    .card-header {
        font-weight: 600;
        font-size: 1rem;
        background-color: #f8f9fa;
    }

        .card-header i {
            color: #0d6efd;
        }

    /* Form labels et icônes */
    .form-label i {
        color: #0d6efd;
    }

    .input-group-text {
        background-color: #e9ecef;
        color: #0d6efd;
        border-radius: 0.375rem 0 0 0.375rem;
    }

    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.25);
    }

    /* Boutons */
    .btn i {
        vertical-align: middle;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    /* Section titles */
    h6.text-primary {
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.25rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    /* Breadcrumb */
    .breadcrumb-item a {
        text-decoration: none;
        color: #0d6efd;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .row > .col-lg-4, .row > .col-lg-8 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .d-flex.justify-content-end.gap-2 {
            flex-direction: column;
        }
    }
</style>

<div class="page-header mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="./ManageComputers">Ordinateurs</a></li>
            <li class="breadcrumb-item active">Modifier</li>
        </ol>
    </nav>
    <h2 class="mt-2"><i class="fas fa-edit me-2"></i>Modifier l'Ordinateur</h2>
</div>

<div class="row g-4">
    <!-- Formulaire principal -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-desktop me-2"></i>Informations de l'Ordinateur</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input asp-for="Computer.Id" type="hidden" />

                    <!-- Informations générales -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-info-circle me-2"></i>Informations Générales</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-barcode me-2"></i>Numéro d'inventaire</label>
                                <input asp-for="Computer.InventoryNumber" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-tag me-2"></i>Marque</label>
                                <input asp-for="Computer.Brand" class="form-control" />
                                <span asp-validation-for="Computer.Brand" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Spécifications techniques -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-microchip me-2"></i>Spécifications Techniques</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-microchip me-2"></i>CPU</label>
                                <input asp-for="Computer.CPU" class="form-control" />
                                <span asp-validation-for="Computer.CPU" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-memory me-2"></i>RAM</label>
                                <input asp-for="Computer.RAM" class="form-control" />
                                <span asp-validation-for="Computer.RAM" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-hdd me-2"></i>Disque Dur</label>
                                <input asp-for="Computer.HardDrive" class="form-control" />
                                <span asp-validation-for="Computer.HardDrive" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-tv me-2"></i>Écran</label>
                                <input asp-for="Computer.Screen" class="form-control" />
                                <span asp-validation-for="Computer.Screen" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Affectation -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-users me-2"></i>Affectation</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-user me-2"></i>Affecté à</label>
                                <input asp-for="Computer.AssignedTo" class="form-control" />
                                <span asp-validation-for="Computer.AssignedTo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-layer-group me-2"></i>Type d'affectation</label>
                                <select asp-for="Computer.AssignmentType" class="form-select">
                                    <option value="Department">Département</option>
                                    <option value="Teacher">Enseignant</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-building me-2"></i>ID Département</label>
                                <input asp-for="Computer.DepartmentId" type="number" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-truck me-2"></i>ID Fournisseur</label>
                                <input asp-for="Computer.SupplierId" type="number" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label"><i class="fas fa-calendar-alt me-2"></i>Date de livraison</label>
                                <input asp-for="Computer.DeliveryDate" type="date" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Boutons -->
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-page="./ManageComputers" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar d'aide -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Aide</h6>
            </div>
            <div class="card-body">
                <p class="small mb-2"><strong>CPU :</strong> Processeur de l'ordinateur</p>
                <p class="small mb-2"><strong>RAM :</strong> Mémoire vive</p>
                <p class="small mb-2"><strong>Disque :</strong> SSD ou HDD</p>
                <p class="small mb-2"><strong>Écran :</strong> Taille et résolution</p>
                <p class="small mb-0"><strong>Type :</strong> Département ou Enseignant</p>
            </div>
        </div>
    </div>
</div>
