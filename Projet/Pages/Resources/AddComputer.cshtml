@page
@model Projet.Pages.Resources.AddComputerModel
@{
    ViewData["Title"] = "Ajouter un Ordinateur";
}

<style>
    /* Card style */
    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.75rem rgba(0,0,0,0.05);
    }

    /* Card header */
    .card-header {
        font-weight: 600;
        font-size: 1rem;
        background-color: #f8f9fa;
    }

        /* Card header icon */
        .card-header i {
            color: #0d6efd;
        }

    /* Form label icon */
    .form-label i {
        color: #0d6efd;
    }

    /* Input group icons */
    .input-group-text {
        background-color: #e9ecef;
        border-radius: 0.375rem 0 0 0.375rem;
        color: #0d6efd;
    }

    /* Inputs focus */
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13,110,253,0.25);
    }

    /* Breadcrumb */
    .breadcrumb-item a {
        text-decoration: none;
        color: #0d6efd;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    /* Section titles */
    h6.text-primary {
        border-bottom: 1px solid #dee2e6;
        padding-bottom: 0.25rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    /* Sidebar card */
    .col-lg-4 .card-header {
        background-color: #0d6efd;
        color: #fff;
    }

    /* Buttons */
    .btn i {
        vertical-align: middle;
    }

    /* Error messages */
    .text-danger {
        font-size: 0.875rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .row > .col-lg-4, .row > .col-lg-8 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .d-flex.justify-content-end.gap-2 {
            flex-direction: column;
        }
    }
</style>

<div class="page-header mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-page="/Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-page="./ManageComputers">Ordinateurs</a></li>
            <li class="breadcrumb-item active">Ajouter</li>
        </ol>
    </nav>
    <h2 class="mt-2"><i class="fas fa-plus-circle me-2"></i>Ajouter un Ordinateur</h2>
</div>

<div class="row g-4">
    <!-- Formulaire principal -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-desktop me-2"></i>Informations de l'Ordinateur</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Informations générales -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-info-circle me-2"></i>Informations Générales</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Numéro d'inventaire *</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    <input asp-for="Computer.InventoryNumber" class="form-control" placeholder="INV-2026-001" />
                                </div>
                                <span asp-validation-for="Computer.InventoryNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Marque *</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                    <input asp-for="Computer.Brand" class="form-control" placeholder="Dell, HP, Lenovo..." />
                                </div>
                                <span asp-validation-for="Computer.Brand" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Spécifications techniques -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-microchip me-2"></i>Spécifications Techniques</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Processeur (CPU)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-microchip"></i></span>
                                    <input asp-for="Computer.CPU" class="form-control" placeholder="Intel Core i7" />
                                </div>
                                <span asp-validation-for="Computer.CPU" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Mémoire RAM</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-memory"></i></span>
                                    <input asp-for="Computer.RAM" class="form-control" placeholder="16GB DDR4" />
                                </div>
                                <span asp-validation-for="Computer.RAM" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Disque Dur</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-hdd"></i></span>
                                    <input asp-for="Computer.HardDrive" class="form-control" placeholder="512GB SSD" />
                                </div>
                                <span asp-validation-for="Computer.HardDrive" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Écran</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-tv"></i></span>
                                    <input asp-for="Computer.Screen" class="form-control" placeholder="24 pouces" />
                                </div>
                                <span asp-validation-for="Computer.Screen" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Affectation -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-users me-2"></i>Affectation</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Affecté à</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Computer.AssignedTo" class="form-control" placeholder="Nom" />
                                </div>
                                <span asp-validation-for="Computer.AssignedTo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Type d'affectation</label>
                                <select asp-for="Computer.AssignmentType" class="form-select">
                                    <option value="Department">Département</option>
                                    <option value="Teacher">Enseignant</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">ID Département</label>
                                <input asp-for="Computer.DepartmentId" type="number" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Date de livraison</label>
                                <input asp-for="Computer.DeliveryDate" type="date" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Fournisseur -->
                    <div class="mb-4">
                        <h6 class="text-primary"><i class="fas fa-truck me-2"></i>Fournisseur</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">ID Fournisseur</label>
                                <input asp-for="Computer.SupplierId" type="number" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Erreurs -->
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                        </div>
                    }

                    <!-- Boutons -->
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-page="./ManageComputers" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar d'aide -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0 text-white"><i class="fas fa-info-circle me-2"></i>Aide</h6>
            </div>
            <div class="card-body">
                <p class="small mb-2"><strong>Numéro :</strong> Identifiant unique</p>
                <p class="small mb-2"><strong>CPU :</strong> Processeur de l'ordinateur</p>
                <p class="small mb-2"><strong>RAM :</strong> Mémoire vive</p>
                <p class="small mb-0"><strong>Type d'affectation :</strong> Département ou Enseignant</p>
            </div>
        </div>
    </div>
</div>
