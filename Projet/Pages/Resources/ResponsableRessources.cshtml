@page
@model Projet.Pages.ResponsableRessources.IndexModel
@{
    ViewData["Title"] = "Responsable des ressources";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-inbox-fill me-2"></i>
                        Besoins envoyés par les départements
                    </h4>
                </div>
                <div class="card-body p-0">
                    @if (Model.BesoinsEnvoyes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">
                                            <i class="bi bi-building me-2"></i>Département
                                        </th>
                                        <th class="px-4 py-3">
                                            <i class="bi bi-box-seam me-2"></i>Type ressource
                                        </th>
                                        <th class="px-4 py-3 text-center">
                                            <i class="bi bi-123 me-2"></i>Quantité
                                        </th>
                                        <th class="px-4 py-3 text-center">
                                            <i class="bi bi-info-circle me-2"></i>Statut
                                        </th>
                                        <th class="px-4 py-3 text-center">
                                            <i class="bi bi-file-text me-2"></i>Appel d'offre
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var besoin in Model.BesoinsEnvoyes)
                                    {
                                        <tr class="border-bottom">
                                            <td class="px-4 py-3">
                                                <strong class="text-dark">@besoin.NomDepartement</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="text-muted">@besoin.TypeRessource</span>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <span class="badge bg-secondary rounded-pill px-3 py-2">
                                                    @besoin.Quantite
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <span class="badge bg-info text-dark px-3 py-2">
                                                    <i class="bi bi-send-check me-1"></i>Envoyé
                                                </span>
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                @if (besoin.AppelOffreId.HasValue)
                                                {
                                                    <span class="badge bg-success px-3 py-2">
                                                        <i class="bi bi-check-circle me-1"></i>AO-@besoin.AppelOffreId
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">En attente</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <div class="mb-4">
                                <i class="bi bi-inbox display-1 text-muted"></i>
                            </div>
                            <h5 class="text-muted">Aucun besoin envoyé pour le moment</h5>
                            <p class="text-muted">Les besoins envoyés par les départements apparaîtront ici.</p>
                        </div>
                    }
                </div>
                @if (Model.BesoinsEnvoyes.Any())
                {
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Total : <strong>@Model.BesoinsEnvoyes.Count</strong> besoin(s) en attente de traitement
                            </span>
                            <button class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-arrow-clockwise me-1"></i>Actualiser
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        border-bottom: 3px solid rgba(255, 255, 255, 0.2);
    }

    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }

    .table tbody tr {
        transition: all 0.2s ease;
    }

        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
            transform: scale(1.01);
        }

    .badge {
        font-size: 0.85rem;
        font-weight: 500;
        letter-spacing: 0.5px;
    }

    thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        color: #495057;
    }
</style>