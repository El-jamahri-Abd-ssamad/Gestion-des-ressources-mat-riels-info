                <a asp-page="/Logout" class="nav-link logout-link">
                    <i class="bi bi-box-arrow-right"></i>
                    <span>Déconnexion</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main content -->
    <main class="main-content">
        <div class="content-wrapper">
            <!-- Header -->
            <div class="page-header">
                <div>
                    <h1 class="page-title">Liste des besoins</h1>
                    <p class="page-subtitle">Gérez et validez les besoins du département</p>
                </div>
                <div class="header-actions">
                    @if (Model.Besoins.Any(b => b.Statut == StatutBesoin.Valide))
                    {
                        <form method="post" asp-page-handler="Envoyer" class="d-inline">
                            <button class="btn btn-primary btn-send">
                                <i class="bi bi-send-fill me-2"></i>
                                Envoyer au responsable
                            </button>
                        </form>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-success alert-custom">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @Model.Message
                </div>
            }

            <!-- Search and filters -->
            <div class="filters-section">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher un besoin...">
                </div>
                <div class="filter-buttons">
                    <button class="btn btn-filter active" data-status="all">Tout</button>
                    <button class="btn btn-filter" data-status="EnAttente">En attente</button>
                    <button class="btn btn-filter" data-status="Valide">Validé</button>
                    <button class="btn btn-filter" data-status="Rejete">Rejeté</button>
                </div>
            </div>

            <!-- Table -->
            <div class="card table-card">
                <div class="table-responsive">
                    <table class="table table-custom">
                        <thead>
                            <tr>
                                <th width="50"></th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Quantité</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th width="200">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var besoin in Model.Besoins)
                            {
                                <tr class="table-row" data-status="@besoin.Statut">
                                    <td>
                                        <div class="product-icon">
                                            <i class="bi bi-box"></i>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="product-type">@besoin.TypeRessource</span>
                                    </td>
                                    <td>
                                        <span class="product-description">@besoin.Description</span>
                                    </td>
                                    <td>
                                        <span class="quantity-badge">@besoin.Quantite</span>
                                    </td>
                                    <td>
                                        <span class="date-text">@besoin.DateSoumission.ToShortDateString()</span>
                                    </td>
                                    <td>
                                        @switch (besoin.Statut)
                                        {
                                            case StatutBesoin.EnAttente:
                                                <span class="status-badge status-warning">
                                                    <i class="bi bi-clock"></i>
                                                    En attente
                                                </span>
                                                break;
                                            case StatutBesoin.Valide:
                                                <span class="status-badge status-success">
                                                    <i class="bi bi-check-circle"></i>
                                                    Validé
                                                </span>
                                                break;
                                            case StatutBesoin.Rejete:
                                                <span class="status-badge status-danger">
                                                    <i class="bi bi-x-circle"></i>
                                                    Rejeté
                                                </span>
                                                break;
                                            case StatutBesoin.Envoye:
                                                <span class="status-badge status-info">
                                                    <i class="bi bi-send"></i>
                                                    Envoyé
                                                </span>
                                                break;
                                            default:
                                                <span class="status-badge status-secondary">Autre</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            @if (besoin.Statut == StatutBesoin.EnAttente)
                                            {
                                                <button class="btn btn-sm btn-primary"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#detailsModal"
                                                        data-id="@besoin.Code"
                                                        data-type="@besoin.TypeRessource"
                                                        data-description="@besoin.Description"
                                                        data-quantite="@besoin.Quantite"
                                                        data-date="@besoin.DateSoumission.ToString("yyyy-MM-dd")">
                                                    <i class="bi bi-eye"></i>
                                                </button>




                                                <form method="post" asp-page-handler="Valider" class="d-inline">
                                                    <input type="hidden" name="besoinId" value="@besoin.Code" />
                                                    <button class="btn-action btn-action-success" title="Valider">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="Rejeter" class="d-inline">
                                                    <input type="hidden" name="besoinId" value="@besoin.Code" />
                                                    <button class="btn-action btn-action-danger" title="Rejeter">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="no-action">—</span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="table-footer">
                    <div class="pagination-info">
                        Affichage de <strong>1-10</strong> sur <strong>@Model.Besoins.Count()</strong> résultats
                    </div>
                    <nav>
                        <ul class="pagination custom-pagination">
                            <li class="page-item disabled">
                                <a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </main>
