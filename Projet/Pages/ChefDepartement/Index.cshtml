<!-- Modal détails -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content modal-custom">

            <div class="modal-header">
                <h5 class="modal-title">Détails du besoin</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="post" asp-page-handler="Modifier">
                <div class="modal-body">

                    <input type="hidden" name="besoinId" id="mId" />

                    <div class="mb-2">
                        <label>Type</label>
                        <input type="text" name="TypeRessource" id="mType" class="form-control" readonly />
                    </div>

                    <div class="mb-2">
                        <label>Description</label>
                        <textarea name="Description" id="mDescription" class="form-control" readonly></textarea>
                    </div>

                    <div class="mb-2">
                        <label>Quantité</label>
                        <input type="number" name="Quantite" id="mQuantite" class="form-control" readonly />
                    </div>

                    <div class="mb-2">
                        <label>Date</label>
                        <input type="date" name="DateSoumission" id="mDate" class="form-control" readonly />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" id="btnModifier" class="btn btn-primary">
                        Modifier
                    </button>

                    <button type="submit" id="btnEnregistrer" class="btn btn-success d-none">
                        Enregistrer
                    </button>

                    <button type="button" id="btnAnnuler" class="btn btn-secondary d-none">
                        Annuler
                    </button>
                </div>
            </form>

        </div>
    </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const searchInput = document.getElementById('searchInput');
        const filterButtons = document.querySelectorAll('.btn-filter');
        const rows = document.querySelectorAll('.table-row');

        let currentStatus = 'all';

        // 🔍 Recherche texte
        searchInput.addEventListener('input', function () {
            applyFilters();
        });

        // 🎛️ Boutons de statut
        filterButtons.forEach(btn => {
            btn.addEventListener('click', function () {

                filterButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                currentStatus = this.dataset.status;
                applyFilters();
            });
        });

        function applyFilters() {
            const searchValue = searchInput.value.toLowerCase();

            rows.forEach(row => {
                const rowText = row.innerText.toLowerCase();
                const rowStatus = row.dataset.status;

                const matchText = rowText.includes(searchValue);
                const matchStatus = currentStatus === 'all' || rowStatus === currentStatus;

                row.style.display = (matchText && matchStatus) ? '' : 'none';
            });
        }
    </script>

    <script>
        var modal = document.getElementById('detailsModal');

        var btnModifier = document.getElementById('btnModifier');
        var btnEnregistrer = document.getElementById('btnEnregistrer');
        var btnAnnuler = document.getElementById('btnAnnuler');

        modal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            document.getElementById('mId').value = button.dataset.id;
            document.getElementById('mType').value = button.dataset.type;
            document.getElementById('mDescription').value = button.dataset.description;
            document.getElementById('mQuantite').value = button.dataset.quantite;
            document.getElementById('mDate').value = button.dataset.date;

            setReadonly(true);
        });

        btnModifier.onclick = function () {
            setReadonly(false);
        };

        btnAnnuler.onclick = function () {
            setReadonly(true);
        };

        function setReadonly(readonly) {
            document.getElementById('mType').readOnly = readonly;
            document.getElementById('mDescription').readOnly = readonly;
            document.getElementById('mQuantite').readOnly = readonly;
            document.getElementById('mDate').readOnly = readonly;

            btnModifier.classList.toggle('d-none', !readonly);
            btnEnregistrer.classList.toggle('d-none', readonly);
            btnAnnuler.classList.toggle('d-none', readonly);
        }
    </script>



