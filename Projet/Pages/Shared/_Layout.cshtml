@{
    var isSignIn = Context.Request.Path.StartsWithSegments("/Signin");
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projet</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projet.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/registration.css" />
</head>

<body>

    @* ===== CONTENU ===== *@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* ===== FOOTER (PAS pour SignIn) ===== *@
    @if (!isSignIn)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2026 - Projet
            </div>
        </footer>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ UNE SEULE SECTION Scripts -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
