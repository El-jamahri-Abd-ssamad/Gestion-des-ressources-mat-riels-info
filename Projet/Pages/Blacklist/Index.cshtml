@page
@model Projet.Pages.Blacklist.IndexModel

<h2>🚫 Liste noire des fournisseurs</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Fournisseur</th>
            <th>Date</th>
            <th>Motif</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Blacklist)
        {
            <tr>
                <td>@b.IdSupplier</td>
                <td>@b.Date.ToShortDateString()</td>
                <td>@b.Reason</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-danger">
    ➕ Ajouter à la blacklist
</a>
