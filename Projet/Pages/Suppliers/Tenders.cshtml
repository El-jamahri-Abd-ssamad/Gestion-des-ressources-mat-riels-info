@page
@model Projet.Pages.Suppliers.TendersModel

<h2>📢 Appels d’offres disponibles</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Début</th>
            <th>Fin</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Tenders)
        {
            <tr>
                <td>@t.Title</td>
                <td>@t.StartDate?.ToShortDateString()</td>
                <td>@t.EndDate?.ToShortDateString()</td>
                <td>
                    <a asp-page="/Tenders/Details"
                       asp-route-id="@t.Id"
                       class="btn btn-info btn-sm">
                        Détails
                    </a>

                    <a asp-page="/Offers/Create"
                       asp-route-tenderId="@t.Id"
                       class="btn btn-success btn-sm">
                        Soumettre une offre
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<a asp-page="Dashboard" class="btn btn-secondary">
    ⬅ Retour au dashboard
</a>
